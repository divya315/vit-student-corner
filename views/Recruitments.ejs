<!DOCTYPE html>
<html lang="en">

<head>
  <title>Recruitments</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <style>
    .jumbotron {
      margin: 0;
    }

    .navbar {
      margin-bottom: 0;
      border-radius: 0;
    }

    .row.content {
      height: 450px
    }

    .sidenav {
      padding-top: 20px;
      background-color: #f1f1f1;
      height: 100%;
    }

    footer {
      background-color: #555;
      color: white;
      padding: 15px;
    }

    @media screen and (max-width: 767px) {
      .sidenav {
        height: auto;
        padding: 15px;
      }

      .row.content {
        height: auto;
      }
    }
  </style>

</head>

<body>
  <div class="jumbotron">
    <div class="media">
      <div class="media-left">
        <img src="image1.png" class="media-object" id="logo">
      </div>
      <div class="media-body">
        <h1 align="center">VIT Student Corner</h1>
        <p align="center">One-stop shop for all your VIT needs!</p>
      </div>
    </div>
  </div>

  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
          <li><a href="index.html">Home</a></li>
          <li><a href="/Projects">Projects</a></li>
          <li class="active"><a href="/Recruitments">Recruitments</a></li>
          <li><a href="/Events">Events</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container-fluid text-center">

    <div class="row content">
      <div class="col-sm-10  text-left">
        <h1 align="center">Recruitments</h1>
        <div class="btn-group btn-group-justified">
          <div class="btn-group">
            <button type="button" class="btn btn" id="stud">Student Section</button>
          </div>
          <div class="btn-group">
            <button type="button" class="btn btn" id="chap">Chapter Section</button>
          </div>
        </div>

        <div class="panel-group" id="student-panel">
          <h3>Student Section</h3>
          <button type="button" class="btn btn" style="margin:10px" id="stud-btn">Add yourself to the candidate list</button>

          <form action="/stud-recruit" method="post" class="form-inline" style="margin: 10px" id="stud-form">
            <div class="form-group">
              <label for="regno">Register Number:</label>
              <input type="text" class="form-control" id="regno" name="studReg">
            </div>
            <div class="form-group">
              <label for="stud-about">About You:</label>
              <input type="text" class="form-control" id="stud-about" name="studAbout">
            </div>
            <input type="submit" class="btn btn-default" id="stud-sub">
          </form>

          <% for(var i=0; i<students.length; i++) {%>
          <div class="panel panel-default">
            <div class="panel-body">
              <h2><%= students[i].studReg %></h2>
              <p><%= students[i].studAbout %></p>
            </div>
          </div>
          <% } %>

        </div>

        <div class="panel-group" id="chapter-panel">
          <h3>Chapter Section</h3>
          <button type="button" class="btn btn" style="margin:10px" id="chap-btn">Add your chapter to the recruitment list</button>

          <form action="/chap-recruit" method="post" class="form-inline" style="margin: 10px" id="chap-form">
            <div class="form-group">
              <label for="chap-name">Chapter Name:</label>
              <input type="text" class="form-control" id="chap-name" name="chapName">
            </div>
            <div class="form-group">
              <label for="chap-about">Recruitment Details:</label>
              <input type="text" class="form-control" id="chap-about" name="chapAbout">
            </div>
            <input type="submit" class="btn btn-default" id="chap-sub">
          </form>

          <% for(var i=0; i<chapters.length; i++) {%>
          <div class="panel panel-default">
            <div class="panel-body">
              <h2><%= chapters[i].chapName %></h2>
              <p><%= chapters[i].chapAbout %></p>
            </div>
          </div>
          <% } %>

        </div>
      </div>

      <div class="col-sm-2 sidenav">
        <div class="well">
          <p>ADS</p>
        </div>
        <div class="well">
          <p>ADS</p>
        </div>
      </div>

    </div>
  </div>

  <footer>
    <section class="content-box box-2">
      <div class="container">
        <div class="row">
          <div class="header">
            <h2 class="heading">
              <span>CONTACT</span>
            </h2>
          </div>

          <div class="col-sm-4">
            <div class="wrap-col item">
              <h3>Divya Khemka</h3>
              <span>Phone: 9003308310</span><br>
              <span>Email divya.khemka2017@vitstudent.ac.in</span> <br>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="wrap-col item">
              <h3>Jayesh Mandlekar</h3>
              <span>Phone: 7738985754</span><br>
              <span>Email jayesh.mandlekar2018@vitstudent.ac.in</span> <br>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="col-sm-2">
              <form action="#" method="post">
                <input type="text" name="email" placeholder="Email" />
                <textarea name="message" placeholder="Message"></textarea>
                <button type="submit" class="btn btn-default">Send</button>
              </form>
            </div>
          </div>
          <div class="header">
            <h2 class="heading2">
              <span><strong>Copyright 2019 - Templates Designed by Jayesh 18BIT0044 and Divya 17BIS0051</strong></span>
            </h2>
          </div>
        </div>
      </div>
    </section>
  </footer>

  <script>
    $("document").ready(function() {

      $("#student-panel").hide();
      $("#chapter-panel").hide();
      $("#chap-form").hide();
      $("#stud-form").hide();

      $("#stud").click(function() {
        $("#student-panel").show(1000);
        $("#chapter-panel").hide(1000);
        $("#chap-form").hide(1000);
      });

      $("#chap").click(function() {
        $("#chapter-panel").show(1000);
        $("#student-panel").hide(1000);
        $("#stud-form").hide(1000);
      });

      $("#chap-btn").click(function() {
        $("#chap-form").toggle(1000);
      });

      $("#stud-btn").click(function() {
        $("#stud-form").toggle(1000);
      });
    });
  </script>
</body>

</html>
